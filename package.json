{
  "name": "@lightningtv/solid",
  "version": "1.1.2",
  "description": "Lightning Renderer for Solid Universal",
  "type": "module",
  "source": "src/index.ts",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./primitives": {
      "types": "./src/primitives/index.ts",
      "import": "./src/primitives/index.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:fix": "npm run lint:fix:prettier && npm run lint:fix:eslint",
    "lint:prettier": "prettier --check \"**/*.{ts,js,cjs,md}\"",
    "lint:fix:prettier": "prettier --write \"**/*.{ts,js,cjs,md}\"",
    "lint:eslint": "eslint .",
    "lint:fix:eslint": "eslint --fix .",
    "build": "npm run tsc",
    "tsc": "tsc",
    "watch": "tsc -w",
    "prepare": "husky",
    "prepack": "npm run build"
  },
  "keywords": [
    "lightning",
    "javascript",
    "canvas",
    "web",
    "tv"
  ],
  "author": "Chris Lorenzo",
  "license": "Apache-2.0",
  "dependencies": {
    "@lightningtv/core": "^1.0.5",
    "@solid-primitives/event-listener": "^2.3.3",
    "@solid-primitives/keyboard": "^1.2.8",
    "@solid-primitives/mouse": "^2.0.19",
    "@solid-primitives/rootless": "^1.4.5",
    "@solid-primitives/scheduled": "^1.4.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "solid-js": "^1.8.17",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,cjs,md}": "prettier --write"
  },
  "peerDependencies": {
    "@lightningjs/renderer": "^1.0.0",
    "solid-js": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightning-tv/solid.git"
  },
  "files": [
    "dist",
    "src",
    "jsx-runtime.d.ts",
    "LICENSE",
    "NOTICE",
    "README.md"
  ]
}
